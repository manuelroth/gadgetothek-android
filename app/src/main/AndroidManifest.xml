<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.manuelroth.gadgetothek_android" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ch.manuelroth.gadgetothek_android.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.manuelroth.gadgetothek_android.MainViewActivity"
            android:label="@string/title_activity_main_view"
            android:parentActivityName="ch.manuelroth.gadgetothek_android.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.manuelroth.gadgetothek_android.LoginActivity" />
        </activity>
        <activity
            android:name="ch.manuelroth.gadgetothek_android.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName="ch.manuelroth.gadgetothek_android.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.manuelroth.gadgetothek_android.LoginActivity" />
        </activity>
    </application>

</manifest>
